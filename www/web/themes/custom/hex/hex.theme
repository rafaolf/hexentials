/**
 * Implements hook_preprocess_HOOK() for block templates.
 */
function hex_preprocess_block(&$variables) {
  $config = \Drupal::config('hex.settings');

  $variables['phone'] = $config->get('phone');
  $variables['email'] = $config->get('email');
  $variables['address'] = $config->get('address');

  $variables['company_name'] = \Drupal::config('system.site')->get('name');
}
