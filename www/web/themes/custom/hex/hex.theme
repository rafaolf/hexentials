/**
 * Implements hook_theme().
 */
function hex_theme($existing, $type, $theme, $path) {
  return [
    'block/block__system_menu_block__footer' => [
      'variables' => [
        'phone' => NULL,
        'email' => NULL,
      ],
    ],
  ];
}

